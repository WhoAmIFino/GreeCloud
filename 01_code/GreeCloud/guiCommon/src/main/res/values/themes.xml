        <item name="android:progressBarStyle">@style/Gui.Common.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/Gui.Common.ProgressBar.Small</item>
        <item name="android:progressBarStyleLarge">@style/Gui.Common.ProgressBar.Large</item>
        <item name="android:progressBarStyleInverse">@style/Gui.Common.ProgressBar.Inverse</item>
        <item name="android:progressBarStyleSmallInverse">@style/Gui.Common.ProgressBar.Small.Inverse</item>
        <item name="android:progressBarStyleLargeInverse">@style/Gui.Common.ProgressBar.Large.Inverse</item>

        <item name="floatingActionButtonColor">@color/gui_common_fab_light</item>
        
