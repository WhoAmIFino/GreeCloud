<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:id="@+id/title_layout"
	    android:layout_weight="1"
		android:background="@color/gui_common_green"
    	>
		<LinearLayout
	        android:id="@+id/base_child_title_left_lay"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical"
	        android:visibility="gone"
	        android:orientation="horizontal" >
	
	        <!-- 最左按钮 -->
	
	        <LinearLayout
	            android:id="@+id/base_child_title_left_btn1"
	            android:layout_width="50dp"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:layout_marginRight="8dp"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/base_child_title_left_btn1_img"
	                android:layout_width="32dip"
	                android:layout_height="32dip"
	                android:background="@drawable/gui_common_title_menu_btn_selector" />
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <!-- 标题 -->
	    <LinearLayout
	        android:id="@+id/base_child_title_button_left_content"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <TextView
		        android:id="@+id/base_child_title_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="15dp"
		        android:singleLine="true"
		        android:text="@string/gui_common_null_desc"
		        android:textColor="@android:color/white"
		        android:textSize="24sp" />
	    </LinearLayout>
	
	    <!-- 右边部分 -->
	
	    <LinearLayout
	        android:id="@+id/base_child_title_right_lay"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <!-- 最右按钮 -->
	
	        <LinearLayout
	            android:id="@+id/base_child_title_right_btn1"
	            android:layout_width="50dp"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:layout_marginRight="8dp"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/base_child_title_right_btn1_img"
	                android:layout_width="32dip"
	                android:layout_height="32dip"
	                android:background="@drawable/gui_common_title_refresh_button_selector" />
	        </LinearLayout>
	
	        <!-- 右2按钮 -->
	
	        <LinearLayout
	            android:id="@+id/base_child_title_right_btn2"
	            android:layout_width="50dip"
	            android:layout_height="match_parent"
	            android:gravity="center"
				android:layout_marginRight="8dp"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/base_child_title_right_btn2_img"
	                android:layout_width="33dip"
	                android:layout_height="33dip"
	                android:background="@drawable/gui_common_title_right_search_selector" />
	        </LinearLayout>
	        
	        <!-- 右3按钮 -->
	        <LinearLayout
	            android:id="@+id/base_child_title_right_btn3"
	            android:layout_width="50dip"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/base_child_title_right_btn3_img"
	                android:layout_width="33dip"
	                android:layout_height="33dip"
	                android:background="@drawable/gui_common_title_menu_btn_selector" />
	        </LinearLayout>
	    </LinearLayout>
    
    </RelativeLayout>

    
</LinearLayout>