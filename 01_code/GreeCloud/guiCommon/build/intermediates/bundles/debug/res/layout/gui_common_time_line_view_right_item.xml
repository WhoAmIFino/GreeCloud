<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdddddd"
    tools:context="com.example.timwlineview.MainActivity" >

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
	<View
	    android:id="@+id/centerdiv"
	    android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
	    />
	
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:paddingLeft="15dp"
         android:textColor="@color/gui_common_black"
        android:layout_alignBaseline="@+id/tv_state"
        android:layout_alignBottom="@+id/tv_state"
        android:layout_toRightOf="@+id/tv_state"

        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gui_common_black"
        android:layout_above="@+id/centerdiv"
        android:layout_toRightOf="@+id/checkbox1"

        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_state"
        android:layout_below="@+id/centerdiv"

        android:textColor="@color/gui_common_vptab_titleinactivted"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>